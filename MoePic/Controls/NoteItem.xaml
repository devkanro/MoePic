<UserControl x:Class="MoePic.Controls.NoteItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="31" d:DesignWidth="31">
    
    <Button x:Name="LayoutRoot" Background="#66FFFFB5" Style="{StaticResource NoBorderButton}" Click="LayoutRoot_Click">
        <Grid>
            <Rectangle Stroke="#7F000000" StrokeThickness="1" Margin="0"></Rectangle>
            <Rectangle StrokeThickness="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="8" Height="8" Margin="0,0,1,1" Fill="#7F000000"/>
        </Grid>
    </Button>
</UserControl>